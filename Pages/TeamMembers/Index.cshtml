@model Proiect_medii_de_programare.Pages.TeamMembers.IndexModel

@{
    ViewData["Title"] = "Players";
}

<h1>Players</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamMember[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamMember[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamMember[0].TShirtNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamMember[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamMember[0].Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamMember[0].Nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamMember[0].Position.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamMember[0].Team.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TeamMember) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TShirtNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
